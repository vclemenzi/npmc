---
interface Props {
  name: string;
  version: string;
  description: string;
  keywords?: string[];
  types?: string;
}

const { name, version, description, keywords } = Astro.props;
---

<div class="space-y-2 p-3">
  <a href={`/${name}`}>
    <h1 class="text-2xl font-bold">
      {name}
      <span class="font-code text-sm opacity-70">{version}</span>
    </h1>
  </a>
  <hr />
  <p class="text-gray-500">
    {description}
  </p>
  <div>
    {
      keywords && (
        <div class="flex flex-wrap gap-2">
          {keywords.slice(0, 5).map((keyword) => (
            <span class="font-code text-sm opacity-80">{keyword}</span>
          ))}{" "}
          {keywords.length > 5 && <span class="font-code text-sm opacity-80">...</span>}
        </div>
      )
    }
  </div>
</div>
