---
interface Props {
  name: string;
  version: string;
  description: string;
  keywords?: string[];
}

const { name, version, description, keywords } = Astro.props;
---

<div class="rounded-2xl bg-surface p-3 pl-5 pr-5">
  <div>
    <div class="flex items-center space-x-2">
      <h1 class="text-2xl">{name}</h1>
      <span class="rounded-xl bg-background p-1 pl-3 pr-3 text-xl">v{version}</span>
    </div>

    <span class="text-lg">{description}</span>

    <div class="mt-2 space-x-2 break-words">
      {
        keywords
          ? keywords.map((keyword: string, i: number) => {
              if (i > 8) return "";
              return (
                <span class="rounded-lg bg-purple-400 p-1 pl-2 pr-2 text-lg/8 text-background">
                  {keyword}
                </span>
              );
            })
          : ""
      }
      {
        keywords ? (
          keywords.length > 8 ? (
            <span class="text-lg/8">and {keywords.length - 8} more...</span>
          ) : (
            ""
          )
        ) : (
          ""
        )
      }
    </div>
  </div>
</div>
