---
import type { PackageDetailed, PackageGeneral } from "../../types/Package";

interface Props {
  detailed: PackageDetailed;
  general: PackageGeneral;
}

const { detailed, general } = Astro.props;

const isLatest = Object.keys(general.versions).pop() === detailed.version;
---

<div
  class="overflow-x-auto whitespace-nowrap rounded-lg border bg-background p-2 pl-5 pr-5 text-center font-code text-lg"
>
  npm i {detailed.name}{isLatest ? "" : `@${detailed.version}`}
</div>
